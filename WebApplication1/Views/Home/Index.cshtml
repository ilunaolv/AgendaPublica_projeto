
<body class="min-h-screen">
    <div id="app" class="flex">

        <!-- Conteúdo Principal do Dashboard -->
        <main class="flex-1 p-4 md:p-8">
            <h1 class="text-4xl font-extrabold text-gray-800 mb-6">Visão Geral dos Eventos</h1>

            <!-- Cards de Estatísticas (Metrics) -->
            <div id="metrics-container" class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6 mb-10">
                <!-- Total de Eventos -->
                <div class="stat-card bg-white p-6 rounded-xl shadow-md border-b-4 border-indigo-500">
                    <div class="flex items-center justify-between">
                        <span class="text-gray-500 font-medium">Total de Eventos</span>
                        <i class="bi bi-calendar-check text-2xl text-indigo-500"></i>
                    </div>
                    <p id="totalEvents" class="text-4xl font-bold mt-2 text-gray-900">0</p>
                </div>
                <!-- Prioridade Alta -->
                <div class="stat-card bg-white p-6 rounded-xl shadow-md border-b-4 border-red-500">
                    <div class="flex items-center justify-between">
                        <span class="text-gray-500 font-medium">Prioridade Alta</span>
                        <i class="bi bi-fire text-2xl text-red-500"></i>
                    </div>
                    <p id="highPriority" class="text-4xl font-bold mt-2 text-gray-900">0</p>
                </div>
                <!-- Eventos Públicos -->
                <div class="stat-card bg-white p-6 rounded-xl shadow-md border-b-4 border-green-500">
                    <div class="flex items-center justify-between">
                        <span class="text-gray-500 font-medium">Eventos Públicos</span>
                        <i class="bi bi-globe text-2xl text-green-500"></i>
                    </div>
                    <p id="publicEvents" class="text-4xl font-bold mt-2 text-gray-900">0</p>
                </div>
                <!-- Próximo Evento (Placeholder) -->
                <div class="stat-card bg-white p-6 rounded-xl shadow-md border-b-4 border-yellow-500">
                    <div class="flex items-center justify-between">
                        <span class="text-gray-500 font-medium">Próximo Início</span>
                        <i class="bi bi-clock text-2xl text-yellow-500"></i>
                    </div>
                    <p id="nextEventDate" class="text-xl font-bold mt-2 text-gray-900">Buscando...</p>
                </div>
            </div>

            <!-- Tabela de Eventos Recentes -->
            <div class="bg-white p-6 rounded-xl shadow-lg">
                <div class="flex justify-between items-center mb-4 border-b pb-3">
                    <h2 class="text-2xl font-semibold text-gray-800">Lista de Eventos Cadastrados</h2>
                    <a href="#" class="text-indigo-600 hover:text-indigo-800 flex items-center">
                        Ver Todos <i class="bi bi-arrow-right ml-2"></i>
                    </a>
                </div>

                <div class="overflow-x-auto">
                    <table class="min-w-full divide-y divide-gray-200">
                        <thead class="bg-gray-50">
                            <tr>
                                <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Nome do Evento</th>
                                <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Prioridade</th>
                                <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Data Início</th>
                                <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Localização</th>
                                <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Ações</th>
                            </tr>
                        </thead>
                        <tbody id="eventsTableBody" class="bg-white divide-y divide-gray-200">
                            <!-- Linhas de eventos serão inseridas aqui pelo JS -->
                            <tr>
                                <td colspan="5" class="px-4 py-4 text-sm text-gray-500 text-center">Carregando eventos...</td>
                            </tr>
                        </tbody>
                    </table>
                </div>

                <!-- Indicador de carregamento/erro -->
                <div id="loadingIndicator" class="text-center py-4 hidden">
                    <i class="bi bi-arrow-clockwise animate-spin text-indigo-500 text-3xl"></i>
                    <p class="text-gray-500 mt-2">Buscando dados...</p>
                </div>
            </div>
        </main>
    </div>

    <!-- Firebase SDKs -->
    <script type="module">
        import { initializeApp } from "https://www.gstatic.com/firebasejs/11.6.1/firebase-app.js";
        import { getAuth, signInAnonymously, signInWithCustomToken, onAuthStateChanged, setPersistence, browserLocalPersistence } from "https://www.gstatic.com/firebasejs/11.6.1/firebase-auth.js";
        import { getFirestore, collection, query, onSnapshot, getDoc, doc, setDoc, updateDoc, deleteDoc, getDocs, orderBy, where, setLogLevel } from "https://www.gstatic.com/firebasejs/11.6.1/firebase-firestore.js";

        // Variáveis globais (fornecidas pelo ambiente)
        const appId = typeof __app_id !== 'undefined' ? __app_id : 'default-app-id';
        const firebaseConfig = typeof __firebase_config !== 'undefined' ? JSON.parse(__firebase_config) : null;
        const initialAuthToken = typeof __initial_auth_token !== 'undefined' ? __initial_auth_token : null;

        let db;
        let auth;
        let userId = null;
        let isAuthReady = false;

        // Configurações do DOM
        const totalEventsEl = document.getElementById('totalEvents');
        const highPriorityEl = document.getElementById('highPriority');
        const publicEventsEl = document.getElementById('publicEvents');
        const nextEventDateEl = document.getElementById('nextEventDate');
        const eventsTableBody = document.getElementById('eventsTableBody');
        const loadingIndicator = document.getElementById('loadingIndicator');

        // Função utilitária para formatar data e hora
        function formatDate(timestamp) {
            if (!timestamp || !timestamp.toDate) return 'N/A';
            const date = timestamp.toDate();
            return date.toLocaleDateString('pt-BR', {
                year: 'numeric',
                month: '2-digit',
                day: '2-digit',
                hour: '2-digit',
                minute: '2-digit'
            });
        }

        // Função para determinar a cor da prioridade
        function getPriorityColor(priority) {
            switch (priority ? priority.toLowerCase() : '') {
                case 'alta':
                    return 'bg-red-100 text-red-800';
                case 'inadiável':
                    return 'bg-purple-100 text-purple-800';
                case 'normal':
                default:
                    return 'bg-blue-100 text-blue-800';
            }
        }

        // Função para renderizar a tabela
        function renderEvents(events) {
            eventsTableBody.innerHTML = '';

            if (events.length === 0) {
                eventsTableBody.innerHTML = `
                    <tr>
                        <td colspan="5" class="px-4 py-4 text-sm text-gray-500 text-center">Nenhum evento cadastrado.</td>
                    </tr>
                `;
                return;
            }

            // Ordena os eventos pela data de início (em memória, evitando orderBy no Firestore)
            events.sort((a, b) => (a.dataHoraInicio.seconds || 0) - (b.dataHoraInicio.seconds || 0));

            // Atualiza as métricas
            totalEventsEl.textContent = events.length;
            highPriorityEl.textContent = events.filter(e => e.prioridade && e.prioridade.toLowerCase() === 'alta').length;
            publicEventsEl.textContent = events.filter(e => e.tipoEvento && e.tipoEvento.toLowerCase() === 'publico').length;

            // Próximo evento (o primeiro após a ordenação)
            nextEventDateEl.textContent = events[0] ? formatDate(events[0].dataHoraInicio) : 'N/A';

            // Renderiza as linhas da tabela
            events.forEach(event => {
                const priorityClass = getPriorityColor(event.prioridade);

                const row = document.createElement('tr');
                row.className = 'hover:bg-gray-50';
                row.innerHTML = `
                    <td class="px-4 py-3 text-sm font-medium text-gray-900">${event.nomeEvento || 'Sem Nome'}</td>
                    <td class="px-4 py-3 whitespace-nowrap">
                        <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full ${priorityClass}">
                            ${event.prioridade || 'Normal'}
                        </span>
                    </td>
                    <td class="px-4 py-3 whitespace-nowrap text-sm text-gray-500">${formatDate(event.dataHoraInicio)}</td>
                    <td class="px-4 py-3 text-sm text-gray-500">${event.endereco || 'Local Não Informado'}</td>
                    <td class="px-4 py-3 whitespace-nowrap text-sm font-medium">
                        <a href="#" class="text-indigo-600 hover:text-indigo-900 mr-3" title="Detalhes"><i class="bi bi-eye"></i></a>
                        <a href="#" class="text-red-600 hover:text-red-900" title="Excluir"><i class="bi bi-trash"></i></a>
                    </td>
                `;
                eventsTableBody.appendChild(row);
            });
        }

        // Função para escutar a coleção de eventos
        function subscribeToEvents() {
            if (!db || !userId) return;

            loadingIndicator.classList.remove('hidden');

            // Caminho para a coleção pública (simulando eventos compartilhados/públicos)
            // Usaremos a estrutura /artifacts/{appId}/public/data/events
            const eventsCollectionRef = collection(db, `artifacts/${appId}/public/data/events`);

            // Cria a query para buscar a coleção
            // NOTA: 'orderBy' foi removido para evitar erros de índice, a ordenação é feita em memória.
            const eventsQuery = query(eventsCollectionRef);

            // onSnapshot para escuta em tempo real
            const unsubscribe = onSnapshot(eventsQuery, (snapshot) => {
                loadingIndicator.classList.add('hidden');

                const events = [];
                snapshot.forEach(doc => {
                    events.push({ id: doc.id, ...doc.data() });
                });

                renderEvents(events);

            }, (error) => {
                console.error("Erro ao carregar eventos:", error);
                loadingIndicator.classList.add('hidden');
                eventsTableBody.innerHTML = `
                    <tr>
                        <td colspan="5" class="px-4 py-4 text-sm font-semibold text-red-600 text-center">
                            Erro ao carregar dados. Verifique a conexão.
                        </td>
                    </tr>
                `;
            });

            // Retorna a função de unsubscribe para limpeza (boa prática)
            return unsubscribe;
        }

        // Função de autenticação (usando o token fornecido ou anonimamente)
        async function initializeAuthAndFirestore() {
            if (!firebaseConfig) {
                console.error("Configuração do Firebase não encontrada.");
                return;
            }

            try {
                // 1. Inicializa o App e serviços
                const app = initializeApp(firebaseConfig);
                db = getFirestore(app);
                auth = getAuth(app);

                // Configura o log para debug
                // setLogLevel('debug');

                // 2. Realiza a autenticação
                await setPersistence(auth, browserLocalPersistence);
                if (initialAuthToken) {
                    await signInWithCustomToken(auth, initialAuthToken);
                } else {
                    await signInAnonymously(auth);
                }

                // 3. Aguarda a mudança de estado de autenticação
                onAuthStateChanged(auth, (user) => {
                    if (user) {
                        userId = user.uid;
                        isAuthReady = true;
                        console.log("Usuário autenticado:", userId);
                        // Inicia a escuta dos dados APÓS a autenticação
                        subscribeToEvents();
                    } else {
                        userId = crypto.randomUUID(); // ID temporário se a autenticação falhar
                        isAuthReady = false;
                        console.log("Autenticação anônima ou falha na autenticação. Usando ID temporário.");
                        // Mesmo sem auth, tentamos carregar, mas pode falhar pelas regras de segurança
                        subscribeToEvents();
                    }
                });

            } catch (error) {
                console.error("Erro na inicialização do Firebase ou Autenticação:", error);
                isAuthReady = true; // Permite a renderização do erro
            }
        }

        // 4. Inicia o processo
        initializeAuthAndFirestore();

        // SIMULANDO A CRIAÇÃO DE DADOS INICIAIS (PARA TESTE)
        // Esta função deve ser chamada apenas uma vez para popular o banco de dados
        async function createInitialData() {
            // Espera a autenticação para garantir que o userId e db estejam prontos
            await new Promise(resolve => onAuthStateChanged(auth, resolve));

            const eventsData = [
                {
                    nomeEvento: "Maratona Praia Grande 2025",
                    prioridade: "Alta",
                    tipoEvento: "Publico",
                    secretaria: "SEPLAN",
                    categoria: "Evento cultural",
                    dataHoraInicio: new Date('2025-05-20T08:00:00'),
                    dataHoraTermino: new Date('2025-05-20T12:00:00'),
                    endereco: "Av. Pres. Castelo Branco, 1000",
                    cep: "11700-000"
                },
                {
                    nomeEvento: "Workshop de Inovação Digital",
                    prioridade: "Normal",
                    tipoEvento: "Privado",
                    secretaria: "SEDUC",
                    categoria: "Workshop",
                    dataHoraInicio: new Date('2025-06-15T14:30:00'),
                    dataHoraTermino: new Date('2025-06-15T17:00:00'),
                    endereco: "Rua do Saber, 50",
                    cep: "11700-123"
                },
                {
                    nomeEvento: "Reunião Anual - Gestão",
                    prioridade: "Inadiável",
                    tipoEvento: "Privado",
                    secretaria: "SEPLAN",
                    categoria: "Palestra",
                    dataHoraInicio: new Date('2025-04-10T10:00:00'),
                    dataHoraTermino: new Date('2025-04-10T11:00:00'),
                    endereco: "Paço Municipal",
                    cep: "11700-999"
                }
            ];

            const eventsCollectionRef = collection(db, `artifacts/${appId}/public/data/events`);

            // Verifica se a coleção já existe antes de popular para evitar duplicação
            const querySnapshot = await getDocs(eventsCollectionRef);
            if (querySnapshot.empty) {
                console.log("Populando o Firestore com dados iniciais...");
                for (const data of eventsData) {
                    // Firestore não aceita Date nativo em setDoc, precisa ser convertido ou usado nativamente
                    // Se for para setDoc, usa-se a forma abaixo (ou apenas passa o Date se usar addDoc)
                    const firestoreData = {
                        ...data,
                        dataHoraInicio: data.dataHoraInicio,
                        dataHoraTermino: data.dataHoraTermino,
                        // Convertendo a data para o formato aceito pelo Firestore no setDoc
                        // (o Firestore lida bem com objetos Date nativos)
                    };
                    await setDoc(doc(eventsCollectionRef), firestoreData);
                }
                console.log("Dados iniciais criados com sucesso.");
            } else {
                 console.log("Coleção 'events' já populada. Pulando criação de dados iniciais.");
            }
        }

        // Descomente a linha abaixo se você quiser que os dados de exemplo sejam criados no seu Firestore
        // createInitialData();

    </script>
</body>
