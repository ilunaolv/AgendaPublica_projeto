        // Função auxiliar para obter o texto da categoria
        function getCategoryText(category) {
            const categories = {
                'cultural': 'Evento Cultural',
                'lecture': 'Palestra',
                'workshop': 'Workshop',
                'sports': 'Evento Esportivo'
            };
            return categories[category] || category;
        }

        // Função auxiliar para obter o texto da secretaria
        function getSecretaryText(secretary) {
            const secretaries = {
                'SEPLAN': 'Secretaria de Planejamento (SEPLAN)',
                'SEDUC': 'Secretaria de Educação (SEDUC)',
                'SESPORT': 'Secretaria de Esportes',
                'SESAU': 'Secretaria de Saúde'
            };
            return secretaries[secretary] || secretary;
        }

        // Função para exportar para Excel
        function exportToExcel() {
            showLoading('Exportando para Excel...');

            // Pequeno delay para mostrar o loading
            setTimeout(() => {
                // Obter os eventos filtrados
                const filteredEvents = filterEvents();

                // Preparar os dados para exportação
                const excelData = filteredEvents.map(event => ({
                    'ID': event.id,
                    'Nome do Evento': event.name,
                    'Data de Início': formatDate(event.startDate),
                    'Data de Término': formatDate(event.endDate),
                    'Categoria': getCategoryText(event.category),
                    'Secretaria': getSecretaryText(event.secretary),
                    'Prioridade': getPriorityText(event.priority),
                    'Status': getStatusText(event.status),
                    'Descrição': event.description
                }));

                // Criar uma planilha
                const ws = XLSX.utils.json_to_sheet(excelData);

                // Criar um workbook
                const wb = XLSX.utils.book_new();
                XLSX.utils.book_append_sheet(wb, ws, "Relatório de Eventos");

                // Gerar o arquivo Excel e fazer o download
                const currentDate = new Date().toISOString().slice(0, 10);
                XLSX.writeFile(wb, `relatorio_eventos_prefeitura_${currentDate}.xlsx`);

                hideLoading();
            }, 1000);
        }

        // Função para exportar para PDF
        function exportToPDF() {
            showLoading('Gerando PDF...');

            // Pequeno delay para mostrar o loading
            setTimeout(() => {
                const { jsPDF } = window.jspdf;
                const doc = new jsPDF('p', 'mm', 'a4');

                // Obter os eventos filtrados
                const filteredEvents = filterEvents();

                // Adicionar cabeçalho com logo
                doc.setFillColor(30, 58, 138);
                doc.rect(0, 0, 210, 30, 'F');

                // Logo (simulada com texto)
                doc.setTextColor(255, 255, 255);
                doc.setFontSize(16);
                doc.setFont('helvetica', 'bold');
                doc.text('Prefeitura Municipal de Praia Grande', 105, 12, { align: 'center' });
                doc.setFontSize(10);
                doc.text('Relatório de Eventos - Secretaria de Eventos', 105, 18, { align: 'center' });

                // Data de geração
                const currentDate = new Date().toLocaleDateString('pt-BR');
                doc.text(`Gerado em: ${currentDate}`, 105, 25, { align: 'center' });

                // Adicionar estatísticas
                let yPosition = 40;
                doc.setTextColor(0, 0, 0);
                doc.setFontSize(14);
                doc.setFont('helvetica', 'bold');
                doc.text('Resumo Estatístico', 20, yPosition);

                yPosition += 10;
                doc.setFontSize(10);
                doc.setFont('helvetica', 'normal');
                doc.text(`Total de Eventos: ${filteredEvents.length}`, 20, yPosition);
                yPosition += 5;
                doc.text(`Eventos Ativos: ${filteredEvents.filter(e => e.status === 'ativo').length}`, 20, yPosition);
                yPosition += 5;
                doc.text(`Eventos de Alta Prioridade: ${filteredEvents.filter(e => e.priority === 'alta' || e.priority === 'inadiavel').length}`, 20, yPosition);
                yPosition += 5;
                doc.text(`Secretarias Envolvidas: ${new Set(filteredEvents.map(e => e.secretary)).size}`, 20, yPosition);

                yPosition += 10;

                // Adicionar tabela de eventos
                if (filteredEvents.length > 0) {
                    doc.setFontSize(12);
                    doc.setFont('helvetica', 'bold');
                    doc.text('Lista de Eventos', 20, yPosition);
                    yPosition += 7;

                    // Cabeçalho da tabela
                    doc.setFillColor(240, 240, 240);
                    doc.rect(20, yPosition, 170, 7, 'F');
                    doc.setFontSize(8);
                    doc.setTextColor(0, 0, 0);
                    doc.text('Evento', 22, yPosition + 5);
                    doc.text('Data', 120, yPosition + 5);
                    doc.text('Categoria', 140, yPosition + 5);
                    doc.text('Secretaria', 160, yPosition + 5);
                    doc.text('Prioridade', 180, yPosition + 5);

                    yPosition += 7;

                    // Conteúdo da tabela
                    doc.setFont('helvetica', 'normal');
                    filteredEvents.forEach((event, index) => {
                        // Quebra de página se necessário
                        if (yPosition > 270) {
                            doc.addPage();
                            yPosition = 20;

                            // Cabeçalho da tabela em nova página
                            doc.setFillColor(240, 240, 240);
                            doc.rect(20, yPosition, 170, 7, 'F');
                            doc.setFontSize(8);
                            doc.setTextColor(0, 0, 0);
                            doc.setFont('helvetica', 'bold');
                            doc.text('Evento', 22, yPosition + 5);
                            doc.text('Data', 120, yPosition + 5);
                            doc.text('Categoria', 140, yPosition + 5);
                            doc.text('Secretaria', 160, yPosition + 5);
                            doc.text('Prioridade', 180, yPosition + 5);
                            yPosition += 7;
                            doc.setFont('helvetica', 'normal');
                        }

                        // Limitar o comprimento do texto para caber nas colunas
                        const eventName = event.name.length > 50 ? event.name.substring(0, 47) + '...' : event.name;

                        doc.text(eventName, 22, yPosition + 5);
                        doc.text(formatDate(event.startDate), 120, yPosition + 5);
                        doc.text(getCategoryText(event.category), 140, yPosition + 5);
                        doc.text(getSecretaryText(event.secretary), 160, yPosition + 5);
                        doc.text(getPriorityText(event.priority), 180, yPosition + 5);

                        yPosition += 5;
                    });
                } else {
                    doc.text('Nenhum evento encontrado com os filtros aplicados.', 20, yPosition);
                }

                // Rodapé
                const pageCount = doc.internal.getNumberOfPages();
                for (let i = 1; i <= pageCount; i++) {
                    doc.setPage(i);
                    doc.setFontSize(8);
                    doc.setTextColor(100, 100, 100);
                    doc.text(`Página ${i} de ${pageCount}`, 105, 290, { align: 'center' });
                    doc.text('Prefeitura Municipal de Praia Grande - Relatório de Eventos', 105, 295, { align: 'center' });
                }

                // Salvar o PDF
                doc.save(`relatorio_eventos_prefeitura_${new Date().toISOString().slice(0, 10)}.pdf`);

                hideLoading();
            }, 1000);
        }

        // Funções para mostrar/ocultar loading
        function showLoading(message = 'Gerando relatório, aguarde...') {
            document.getElementById('loadingText').textContent = message;
            document.getElementById('loadingOverlay').style.display = 'flex';
        }

        function hideLoading() {
            document.getElementById('loadingOverlay').style.display = 'none';
        }

        // Inicialização
        document.addEventListener('DOMContentLoaded', function() {
            // Mostrar/ocultar datas personalizadas
            document.getElementById('periodFilter').addEventListener('change', function() {
                const customDateRange = document.getElementById('customDateRange');
                if (this.value === 'custom') {
                    customDateRange.style.display = 'block';
                } else {
                    customDateRange.style.display = 'none';
                }
            });

            // Aplicar filtros
            document.getElementById('applyFilters').addEventListener('click', function() {
                const filteredEvents = filterEvents();
                updateDashboard(filteredEvents);
            });

            // Limpar filtros
            document.getElementById('resetFilters').addEventListener('click', function() {
                document.getElementById('periodFilter').value = 'all';
                document.getElementById('secretaryFilter').value = 'all';
                document.getElementById('categoryFilter').value = 'all';
                document.getElementById('priorityFilter').value = 'all';
                document.getElementById('startDate').value = '';
                document.getElementById('endDate').value = '';
                document.getElementById('customDateRange').style.display = 'none';

                updateDashboard(mockEvents);
            });

            // Exportar relatórios
            document.getElementById('exportExcel').addEventListener('click', exportToExcel);
            document.getElementById('exportPDF').addEventListener('click', exportToPDF);

            // Inicializar o dashboard com todos os eventos
            updateDashboard(mockEvents);
        });
