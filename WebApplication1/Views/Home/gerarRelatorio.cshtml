        // Função para formatar a data
        function formatDate(dateString) {
            const date = new Date(dateString);
            return date.toLocaleDateString('pt-BR');
        }

        // Função para obter o texto da prioridade
        function getPriorityText(priority) {
            const priorities = {
                'normal': 'Normal',
                'alta': 'Alta',
                'inadiavel': 'Inadiável'
            };
            return priorities[priority] || priority;
        }

        // Função para obter a classe Bootstrap da prioridade
        function getPriorityClass(priority) {
            const classes = {
                'normal': 'bg-secondary',
                'alta': 'bg-warning text-dark',
                'inadiavel': 'bg-danger'
            };
            return classes[priority] || 'bg-secondary';
        }

        // Função para obter o texto do status
        function getStatusText(status) {
            const statuses = {
                'ativo': 'Ativo',
                'concluido': 'Concluído',
                'planejamento': 'Em Planejamento'
            };
            return statuses[status] || status;
        }

        // Função para obter a classe Bootstrap do status
        function getStatusClass(status) {
            const classes = {
                'ativo': 'bg-success',
                'concluido': 'bg-secondary',
                'planejamento': 'bg-info'
            };
            return classes[status] || 'bg-secondary';
        }

        // Função para filtrar eventos com base nos filtros selecionados
        function filterEvents() {
            const periodFilter = document.getElementById('periodFilter').value;
            const secretaryFilter = document.getElementById('secretaryFilter').value;
            const categoryFilter = document.getElementById('categoryFilter').value;
            const priorityFilter = document.getElementById('priorityFilter').value;
            const startDate = document.getElementById('startDate').value;
            const endDate = document.getElementById('endDate').value;

            let filteredEvents = [...mockEvents];

            // Filtrar por período
            if (periodFilter !== 'all') {
                const now = new Date();
                filteredEvents = filteredEvents.filter(event => {
                    const eventDate = new Date(event.startDate);

                    switch(periodFilter) {
                        case 'today':
                            return eventDate.toDateString() === now.toDateString();
                        case 'week':
                            const startOfWeek = new Date(now);
                            startOfWeek.setDate(now.getDate() - now.getDay());
                            startOfWeek.setHours(0, 0, 0, 0);
                            return eventDate >= startOfWeek;
                        case 'month':
                            return eventDate.getMonth() === now.getMonth() &&
                                   eventDate.getFullYear() === now.getFullYear();
                        case 'quarter':
                            const currentQuarter = Math.floor(now.getMonth() / 3);
                            const eventQuarter = Math.floor(eventDate.getMonth() / 3);
                            return eventQuarter === currentQuarter &&
                                   eventDate.getFullYear() === now.getFullYear();
                        case 'year':
                            return eventDate.getFullYear() === now.getFullYear();
                        case 'custom':
                            if (startDate && endDate) {
                                const customStart = new Date(startDate);
                                const customEnd = new Date(endDate);
                                customEnd.setHours(23, 59, 59, 999);
                                return eventDate >= customStart && eventDate <= customEnd;
                            }
                            return true;
                        default:
                            return true;
                    }
                });
            }

            // Filtrar por secretaria
            if (secretaryFilter !== 'all') {
                filteredEvents = filteredEvents.filter(event => event.secretary === secretaryFilter);
            }

            // Filtrar por categoria
            if (categoryFilter !== 'all') {
                filteredEvents = filteredEvents.filter(event => event.category === categoryFilter);
            }

            // Filtrar por prioridade
            if (priorityFilter !== 'all') {
                filteredEvents = filteredEvents.filter(event => event.priority === priorityFilter);
            }

            return filteredEvents;
        }

        // Função para atualizar o dashboard
        function updateDashboard(events) {
            // Atualizar estatísticas
            document.getElementById('totalEvents').textContent = events.length;

            const activeEvents = events.filter(event => event.status === 'ativo').length;
            document.getElementById('activeEvents').textContent = activeEvents;

            const highPriorityEvents = events.filter(event =>
                event.priority === 'alta' || event.priority === 'inadiavel').length;
            document.getElementById('highPriorityEvents').textContent = highPriorityEvents;

            const involvedSecretaries = new Set(events.map(event => event.secretary)).size;
            document.getElementById('involvedSecretaries').textContent = involvedSecretaries;

            // Atualizar gráfico de categorias
            updateCategoryChart(events);

            // Atualizar gráfico de secretarias
            updateSecretaryChart(events);

            // Atualizar gráfico de tendência
            updateTrendChart(events);

            // Atualizar tabela de eventos
            updateEventsTable(events);
        }

        // Função para atualizar o gráfico de categorias
        function updateCategoryChart(events) {
            const categories = {
                'cultural': 0,
                'lecture': 0,
                'workshop': 0,
                'sports': 0
            };

            events.forEach(event => {
                if (categories.hasOwnProperty(event.category)) {
                    categories[event.category]++;
                }
            });

            const ctx = document.getElementById('categoryChart').getContext('2d');

            // Destruir gráfico anterior se existir
            if (window.categoryChartInstance) {
                window.categoryChartInstance.destroy();
            }

            window.categoryChartInstance = new Chart(ctx, {
                type: 'doughnut',
                data: {
                    labels: ['Evento Cultural', 'Palestra', 'Workshop', 'Evento Esportivo'],
                    datasets: [{
                        data: [
                            categories.cultural,
                            categories.lecture,
                            categories.workshop,
                            categories.sports
                        ],
                        backgroundColor: [
                            '#FF6384',
                            '#36A2EB',
                            '#FFCE56',
                            '#4BC0C0'
                        ],
                        borderWidth: 1
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            position: 'bottom'
                        }
                    }
                }
            });
        }

        // Função para atualizar o gráfico de secretarias
        function updateSecretaryChart(events) {
            const secretaries = {
                'SEPLAN': 0,
                'SEDUC': 0,
                'SESPORT': 0,
                'SESAU': 0
            };

            events.forEach(event => {
                if (secretaries.hasOwnProperty(event.secretary)) {
                    secretaries[event.secretary]++;
                }
            });

            const ctx = document.getElementById('secretaryChart').getContext('2d');

            // Destruir gráfico anterior se existir
            if (window.secretaryChartInstance) {
                window.secretaryChartInstance.destroy();
            }

            window.secretaryChartInstance = new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: ['SEPLAN', 'SEDUC', 'SESPORT', 'SESAU'],
                    datasets: [{
                        label: 'Número de Eventos',
                        data: [
                            secretaries.SEPLAN,
                            secretaries.SEDUC,
                            secretaries.SESPORT,
                            secretaries.SESAU
                        ],
                        backgroundColor: [
                            'rgba(54, 162, 235, 0.7)',
                            'rgba(75, 192, 192, 0.7)',
                            'rgba(255, 159, 64, 0.7)',
                            'rgba(153, 102, 255, 0.7)'
                        ],
                        borderColor: [
                            'rgb(54, 162, 235)',
                            'rgb(75, 192, 192)',
                            'rgb(255, 159, 64)',
                            'rgb(153, 102, 255)'
                        ],
                        borderWidth: 1
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    scales: {
                        y: {
                            beginAtZero: true,
                            ticks: {
                                stepSize: 1
                            }
                        }
                    }
                }
            });
        }

        // Função para atualizar o gráfico de tendência
        function updateTrendChart(events) {
            // Agrupar eventos por mês
            const monthlyData = {};

            events.forEach(event => {
                const date = new Date(event.startDate);
                const monthYear = `${date.getMonth() + 1}/${date.getFullYear()}`;

                if (!monthlyData[monthYear]) {
                    monthlyData[monthYear] = 0;
                }

                monthlyData[monthYear]++;
            });

            // Ordenar por data
            const sortedMonths = Object.keys(monthlyData).sort((a, b) => {
                const [monthA, yearA] = a.split('/').map(Number);
                const [monthB, yearB] = b.split('/').map(Number);

                if (yearA !== yearB) {
                    return yearA - yearB;
                }

                return monthA - monthB;
            });

            const labels = sortedMonths;
            const data = sortedMonths.map(month => monthlyData[month]);

            const ctx = document.getElementById('trendChart').getContext('2d');

            // Destruir gráfico anterior se existir
            if (window.trendChartInstance) {
                window.trendChartInstance.destroy();
            }

            window.trendChartInstance = new Chart(ctx, {
                type: 'line',
                data: {
                    labels: labels,
                    datasets: [{
                        label: 'Número de Eventos',
                        data: data,
                        borderColor: 'rgb(75, 192, 192)',
                        backgroundColor: 'rgba(75, 192, 192, 0.2)',
                        tension: 0.3,
                        fill: true
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    scales: {
                        y: {
                            beginAtZero: true,
                            ticks: {
                                stepSize: 1
                            }
                        }
                    }
                }
            });
        }

        // Função para atualizar a tabela de eventos
        function updateEventsTable(events) {
            const tableBody = document.getElementById('eventsTableBody');
            tableBody.innerHTML = '';

            if (events.length === 0) {
                tableBody.innerHTML = `
                    <tr>
                        <td colspan="7" class="text-center py-4">
                            <i class="bi bi-inbox display-4 text-muted d-block mb-2"></i>
                            <span class="text-muted">Nenhum evento encontrado com os filtros aplicados</span>
                        </td>
                    </tr>
                `;
                return;
            }

            events.forEach(event => {
                const row = document.createElement('tr');

                row.innerHTML = `
                    <td>${event.name}</td>
                    <td>${formatDate(event.startDate)}</td>
                    <td>${getCategoryText(event.category)}</td>
                    <td>${getSecretaryText(event.secretary)}</td>
                    <td>
                        <span class="badge priority-badge ${getPriorityClass(event.priority)}">
                            ${getPriorityText(event.priority)}
                        </span>
                    </td>
                    <td>
                        <span class="badge ${getStatusClass(event.status)}">
                            ${getStatusText(event.status)}
                        </span>
                    </td>
                    <td>
