@model WebApplication1.Models.EventoViewModel
@{
    ViewData["Title"] = "Criar Novo Evento";
}

<style>
    /* Header */
    .modal-header {
        background: none;
        color: #000;
        padding: 15px;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

        .modal-header h3 {
            margin: 0;
            font-size: 20px;
        }

    .modal-content {
        padding: 15px;
        min-height: 600px;
        overflow-y: auto;
    }

    /* Estilos personalizados */
    .upload-area {
        border: 1px dashed #f8f9fa;
        border-radius: 8px;
        padding: 40px 20px;
        text-align: center;
        background-color: #f8f9fa;
        cursor: pointer;
        transition: all 0.3s ease;
    }

        .upload-area:hover {
            border-color: #ccc;
            background-color: #f0f8ff;
        }

    .form-section {
        background-color: #fff;
        border-radius: 8px;
        padding: 20px;
        margin-bottom: 25px;
        border: 1px solid #e0e0e0;
    }

    .section-title {
        color: #333;
        border-bottom: 2px solid #ccc;
        padding-bottom: 10px;
        margin-bottom: 20px;
        font-size: 1.25rem;
    }

    .field-validation-error {
        font-size: 0.875rem;
        margin-top: 0.25rem;
    }
</style>

<!-- Mensagem de sucesso -->
@if (TempData["Sucesso"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["Sucesso"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<!-- Modal para cortar imagem -->
<div class="modal fade" id="cropModal" tabindex="-1" aria-labelledby="cropModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="cropModalLabel">Ajustar e Cortar Banner</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="img-container" style="max-height: 400px; overflow: hidden;">
                    <img id="imageToCrop" src="" alt="Imagem para Cortar" style="max-width: 100%;">
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-primary" id="cropButton">Cortar e Salvar</button>
            </div>
        </div>
    </div>
</div>

<!-- Formulário Principal -->
<form asp-action="Criar" method="post" enctype="multipart/form-data" id="eventoForm">
    @Html.AntiForgeryToken()

  
    <!-- Banner do Evento -->
    <div class="form-section">
        <h3 class="section-title"> <i class="bi bi-images"></i> Banner do evento</h3>

        <div id="bannerPreviewContainer" class="mb-3" style="display: none;">
            <img id="bannerPreview" class="img-fluid rounded shadow" style="max-height: 250px; width: 100%; object-fit: cover;" alt="Preview do Banner">
            <button id="removeBannerBtn" type="button" class="btn btn-sm btn-outline-danger mt-2">Remover Banner</button>
            <input type="hidden" id="bannerBase64" asp-for="BannerBase64" />
        </div>

        <div class="upload-area mb-3" id="uploadArea">
            <div id="uploadContent">
                <i class="fas fa-cloud-upload-alt fa-2x text-muted mb-2"></i>
                <h5>Arraste e solte o banner aqui</h5>
                <p class="text-muted">ou clique para selecionar o arquivo</p>
            </div>
            <input type="file" class="d-none" id="bannerUpload" accept="image/*">
            <button type="button" class="btn btn-outline-primary" onclick="document.getElementById('bannerUpload').click()">
                Selecionar Arquivo
            </button>
        </div>
    </div>

    <!-- Informações Gerais -->
    <div class="form-section">
        <h3 class="section-title"> <i class="bi bi-pencil-square"></i> Informações gerais do evento</h3>

        <!-- Título do Evento -->
        <div class="row">
            <div class="col mb-4">
                <label asp-for="Titulo" class="form-label fw-bold">Nome do evento *</label>
                <input asp-for="Titulo" type="text" class="form-control" placeholder="Digite o nome do evento">
                <span asp-validation-for="Titulo" class="text-danger"></span>
            </div>
        </div>

        <!-- Prioridade e Secretaria -->
        <div class="row row-cols-1 row-cols-lg-2">
            <!-- Nível de Prioridade -->
            <div class="col mb-4">
                <label asp-for="CdNivelPrioridade" class="form-label fw-bold">Nível de prioridade *</label>
                <select asp-for="CdNivelPrioridade" asp-items="ViewBag.NiveisPrioridade" class="form-select">
                    <option value="">Selecione...</option>
                </select>
                <span asp-validation-for="CdNivelPrioridade" class="text-danger"></span>
            </div>

            <div class="col mb-4">
                <label asp-for="CdSecretaria" class="form-label fw-bold">Secretaria responsável *</label>
                <select asp-for="CdSecretaria" asp-items="ViewBag.Secretarias" class="form-select">
                    <option value="">Selecione...</option>
                </select>
                <span asp-validation-for="CdSecretaria" class="text-danger"></span>
            </div>
        </div>
        <!-- Visualização e Tipo de Evento -->
        <div class="row row-cols-1 row-cols-lg-2">
            <!-- Visualização do evento -->
            <div class="col mb-4">
                <label asp-for="VisualizacaoInterna" class="form-label fw-bold">Visualização do evento *</label>
                <div class="d-flex gap-4">
                    <div class="form-check">
                        <input class="form-check-input" type="radio" asp-for="VisualizacaoInterna" id="visualizacaoPublico" value="false">
                        <label class="form-check-label" for="visualizacaoPublico">
                            Público
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" asp-for="VisualizacaoInterna" id="visualizacaoPrivado" value="true" checked>
                        <label class="form-check-label" for="visualizacaoPrivado">
                            Privado
                        </label>
                    </div>
                </div>
                <small class="text-muted d-block mt-1">
                    <strong>Público:</strong> visível para todos os usuários<br>
                    <strong>Privado:</strong> visível apenas para usuários internos do sistema
                </small>
                <span asp-validation-for="VisualizacaoInterna" class="text-danger"></span>
            </div>

            <!-- Tipo de evento -->
            <div class="col mb-4">
                <label asp-for="CdTipoEvento" class="form-label fw-bold">Tipo de evento *</label>
                <select asp-for="CdTipoEvento" asp-items="ViewBag.TiposEvento" class="form-select">
                    <option value="">Selecione...</option>
                </select>
                <span asp-validation-for="CdTipoEvento" class="text-danger"></span>
            </div>
        </div>

        <!-- Descrição -->
        <div class="row">
            <div class="mb-3">
                <label asp-for="Descricao" class="form-label fw-bold">Descrição</label>
                <textarea asp-for="Descricao" class="form-control" rows="6" placeholder="Descreva o evento..."></textarea>
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>
        </div>
    </div>

    <!-- Programação do evento -->
    <div class="form-section">
        <h3 class="section-title"><i class="bi bi-calendar-week"></i> Programação do evento</h3>

        <!-- Datas -->
        <div class="row row-cols-1 row-cols-lg-2">
            <div class="col mb-4">
                <label asp-for="DataInicio" class="form-label fw-bold">Data e Hora de Início *</label>
                <input asp-for="DataInicio" type="datetime-local" class="form-control">
                <span asp-validation-for="DataInicio" class="text-danger"></span>
            </div>
            <div class="col mb-4">
                <label asp-for="DataFim" class="form-label fw-bold">Data e Hora de Término *</label>
                <input asp-for="DataFim" type="datetime-local" class="form-control">
                <span asp-validation-for="DataFim" class="text-danger"></span>
            </div>
        </div>
    </div>

    <!-- Endereço do Evento -->
    <div class="form-section">
        <h3 class="section-title"><i class="bi bi-geo-alt"></i> Localização do Evento</h3>

        <!-- CEP e Endereço -->
        <div class="row row-cols-1 row-cols-lg-2">
            <div class="col mb-4">
                <label asp-for="Endereco.Cep" class="form-label fw-bold">CEP</label>
                <div class="input-group">
                    <input asp-for="Endereco.Cep" type="text" class="form-control" placeholder="Digite o CEP" id="cepInput">
                    <button class="btn btn-outline-primary" type="button" id="btnBuscarCEP" title="Buscar CEP">
                        <i class="bi bi-search"></i>
                    </button>
                </div>
                <span asp-validation-for="Endereco.Cep" class="text-danger"></span>
            </div>
            <div class="col mb-4">
                <label asp-for="Endereco.Endereco" class="form-label fw-bold">Endereço</label>
                <input asp-for="Endereco.Endereco" type="text" class="form-control" placeholder="Rua, avenida, etc." id="enderecoInput">
                <span asp-validation-for="Endereco.Endereco" class="text-danger"></span>
            </div>
        </div>

        <!-- Número e Bairro -->
        <div class="row row-cols-1 row-cols-lg-2">
            <div class="col mb-4">
                <label asp-for="Endereco.Numero" class="form-label fw-bold">Nº</label>
                <input asp-for="Endereco.Numero" type="text" class="form-control" id="numeroInput">
                <span asp-validation-for="Endereco.Numero" class="text-danger"></span>
            </div>
            <div class="col mb-4">
                <label asp-for="Endereco.Bairro" class="form-label fw-bold">Bairro</label>
                <select asp-for="Endereco.Bairro" asp-items="ViewBag.Bairros" class="form-select" id="bairroSelect">
                    <option value="">Selecione o bairro</option>
                </select>
                <span asp-validation-for="Endereco.Bairro" class="text-danger"></span>
            </div>
        </div>


        <!-- ADICIONE ESTA LINHA: Complemento -->
        <div class="row">
            <div class="col mb-4">
                <label asp-for="Endereco.Complemento" class="form-label fw-bold">Complemento</label>
                <input asp-for="Endereco.Complemento" type="text" class="form-control" placeholder="Apartamento, bloco, etc.">
                <span asp-validation-for="Endereco.Complemento" class="text-danger"></span>
            </div>
        </div>

    </div>

    <!-- Anexo de Documentos -->
    <div class="form-section" id="document-upload-section">
        <h3 class="section-title"><i class="bi bi-arrow-bar-up"></i> Anexo de documentos</h3>

        <div class="upload-list">
            <div class="row upload-group mb-4">
                <div class="col">
                    <label class="form-label fw-bold">Upload</label>
                    <div class="input-group">
                        <input type="file" class="form-control" name="Documentos" accept=".pdf" multiple>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="d-flex align-items-start">
                    <span class="text-primary me-2">•</span>
                    <span class="text-muted">
                        Tamanho máximo: 5MB
                    </span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="d-flex align-items-start">
                    <span class="text-primary me-2">•</span>
                    <span class="text-muted">
                        Formato permitido: PDF
                    </span>
                </div>
            </div>
        </div>
    </div>

    <!-- Botões de Ação -->
    <div class="d-flex gap-3 justify-content-end mb-4 p-3 border-bottom bg-light">
        <button type="button" class="btn btn-outline-secondary" onclick="window.history.back()">Cancelar</button>
        <button type="submit" class="btn btn-primary">Cadastrar Evento</button>
    </div>
</form>

@section Scripts {
    <!-- Scripts de validação -->
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <!-- JS - AREA DE BANNER -->
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const bannerUpload = document.getElementById('bannerUpload');
            const bannerPreviewContainer = document.getElementById('bannerPreviewContainer');
            const bannerPreview = document.getElementById('bannerPreview');
            const removeBannerBtn = document.getElementById('removeBannerBtn');
            const uploadArea = document.getElementById('uploadArea');
            const uploadContent = document.getElementById('uploadContent');
            const bannerBase64Input = document.getElementById('bannerBase64');

            const imageToCrop = document.getElementById('imageToCrop');
            const cropModal = new bootstrap.Modal(document.getElementById('cropModal'));
            const cropButton = document.getElementById('cropButton');

            let cropper;

            // 1. Ação quando o arquivo é selecionado
            bannerUpload.addEventListener('change', function (e) {
                if (e.target.files && e.target.files[0]) {
                    const file = e.target.files[0];

                    // Verificar tamanho do arquivo (max 5MB)
                    if (file.size > 5 * 1024 * 1024) {
                        alert('O arquivo é muito grande. Tamanho máximo: 5MB');
                        bannerUpload.value = '';
                        return;
                    }

                    const reader = new FileReader();
                    reader.onload = function (event) {
                        imageToCrop.src = event.target.result;
                        cropModal.show();
                    };
                    reader.readAsDataURL(file);
                }
            });

            // 2. Inicialização do Cropper
            document.getElementById('cropModal').addEventListener('shown.bs.modal', function () {
                cropper = new Cropper(imageToCrop, {
                    aspectRatio: 16 / 9,
                    viewMode: 1,
                    autoCropArea: 0.9,
                });
            });

            // 3. Destruição do Cropper
            document.getElementById('cropModal').addEventListener('hidden.bs.modal', function () {
                if (cropper) {
                    cropper.destroy();
                    cropper = null;
                }
                bannerUpload.value = '';
            });

            // 4. Ação de Corte
            cropButton.addEventListener('click', function () {
                if (cropper) {
                    const croppedCanvas = cropper.getCroppedCanvas({
                        width: 1200,
                        height: 675,
                    });

                    const croppedDataUrl = croppedCanvas.toDataURL('image/jpeg', 0.8);

                    // Salva no campo hidden
                    bannerBase64Input.value = croppedDataUrl;

                    // Exibe preview
                    bannerPreview.src = croppedDataUrl;
                    bannerPreviewContainer.style.display = 'block';
                    uploadArea.style.display = 'none';

                    cropModal.hide();
                }
            });

            // 5. Remover Banner
            removeBannerBtn.addEventListener('click', function () {
                bannerPreview.src = '';
                bannerPreviewContainer.style.display = 'none';
                uploadArea.style.display = 'block';
                bannerBase64Input.value = '';
                bannerUpload.value = '';
            });
        });
    </script>
    
    <!-- JS - AREA DE PROGRAMAÇÃO (Busca CEP) -->
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const cepInput = document.getElementById('cepInput');
            const btnBuscarCEP = document.getElementById('btnBuscarCEP');
            const enderecoInput = document.getElementById('enderecoInput');
            const bairroSelect = document.getElementById('bairroSelect');
            const numeroInput = document.getElementById('numeroInput');

            function limparCamposEndereco() {
                enderecoInput.value = "";
                bairroSelect.value = "";
            }

            async function buscarCEP() {
                let cep = cepInput.value.replace(/\D/g, '');

                if (cep.length !== 8) {
                    if (cep.length > 0) {
                        alert('CEP inválido! O CEP deve ter 8 dígitos.');
                    }
                    limparCamposEndereco();
                    return;
                }

                limparCamposEndereco();

                const url = `https://viacep.com.br/ws/${cep}/json/`;

                try {
                    const response = await fetch(url);
                    const data = await response.json();

                    if (data.erro) {
                        alert('CEP não encontrado. Por favor, verifique o número digitado.');
                    } else {
                        enderecoInput.value = data.logradouro || '';
                        preencherBairro(data.bairro);
                        numeroInput.focus();
                    }
                } catch (error) {
                    console.error('Erro ao buscar o CEP:', error);
                    alert('Erro na comunicação com o serviço de busca de CEP.');
                }
            }

            function preencherBairro(bairroEncontrado) {
                if (!bairroEncontrado) return;

                const options = Array.from(bairroSelect.options);
                let bairroExiste = false;

                options.forEach(option => {
                    if (option.text.toLowerCase() === bairroEncontrado.toLowerCase()) {
                        bairroSelect.value = option.value;
                        bairroExiste = true;
                    }
                });

                if (!bairroExiste && bairroEncontrado) {
                    // Adiciona o bairro encontrado como nova opção
                    const newOption = document.createElement('option');
                    newOption.value = bairroEncontrado;
                    newOption.textContent = bairroEncontrado;
                    bairroSelect.appendChild(newOption);
                    bairroSelect.value = bairroEncontrado;
                }
            }

            // Event Listeners
            btnBuscarCEP.addEventListener('click', buscarCEP);
            cepInput.addEventListener('blur', buscarCEP);

            // Máscara para CEP
            cepInput.addEventListener('input', function(e) {
                let value = e.target.value.replace(/\D/g, '');
                if (value.length > 5) {
                    value = value.substring(0, 5) + '-' + value.substring(5, 8);
                }
                e.target.value = value;
            });

            // Validação de datas
            const dataInicio = document.getElementById('DataInicio');
            const dataFim = document.getElementById('DataFim');

            function validarDatas() {
                if (dataInicio.value && dataFim.value) {
                    const inicio = new Date(dataInicio.value);
                    const fim = new Date(dataFim.value);

                    if (fim < inicio) {
                        alert('A data de término não pode ser anterior à data de início!');
                        dataFim.value = '';
                        dataFim.focus();
                    }
                }
            }

            dataInicio.addEventListener('change', function() {
                if (dataFim.value) {
                    validarDatas();
                }
            });

            dataFim.addEventListener('change', validarDatas);
        });
    </script>

    <!-- JS - AREA DE ANEXO DE DOCUMENTOS -->
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const uploadSection = document.getElementById('document-upload-section');
            const uploadList = uploadSection.querySelector('.upload-list');
            const originalUploadGroup = uploadList.querySelector('.upload-group');

            // Função para atualizar os botões em todos os campos
            function updateControls() {
                const allUploadGroups = uploadList.querySelectorAll('.upload-group');
                const lastIndex = allUploadGroups.length - 1;

                allUploadGroups.forEach((group, index) => {
                    const inputGroup = group.querySelector('.input-group');
                    // Remove todos os botões existentes antes de recolocar
                    inputGroup.querySelectorAll('button').forEach(btn => btn.remove());

                    // 1. Adiciona o botão de REMOVER em TODOS os campos
                    const removeButton = document.createElement('button');
                    removeButton.className = 'btn btn-danger';
                    removeButton.type = 'button';
                    removeButton.title = 'Remover arquivo';
                    removeButton.innerHTML = '<i class="bi bi-x-lg"></i>';

                    // Adiciona o listener de remover
                    removeButton.addEventListener('click', function() {
                        group.remove();
                        // Se o campo removido era o único, chamamos a função para garantir que
                        // a lista não fique completamente vazia, inserindo um campo novo e limpo.
                        if (uploadList.querySelectorAll('.upload-group').length === 0) {
                            addFileUploadField();
                        }
                        updateControls(); // Atualiza os controles nos campos restantes
                    });

                    // Anexa o botão de remover
                    inputGroup.appendChild(removeButton);

                    // 2. Adiciona o botão de ADICIONAR SOMENTE no ÚLTIMO campo
                    if (index === lastIndex) {
                        const addButton = document.createElement('button');
                        addButton.className = 'btn btn-primary';
                        addButton.type = 'button';
                        addButton.title = 'Adicionar arquivo';
                        addButton.innerHTML = '<i class="bi bi-plus-lg"></i>';

                        // Adiciona o listener para adicionar um novo campo
                        addButton.addEventListener('click', addFileUploadField);

                        // Anexa o botão de adicionar
                        inputGroup.insertBefore(addButton, removeButton); // Insere ANTES do remover
                    }
                });
            }

            // Função para adicionar um novo campo
            function addFileUploadField() {
                // Clona a estrutura do primeiro grupo (que está no DOM)
                const newUploadGroup = originalUploadGroup.cloneNode(true);

                // Limpa o input file clonado
                const fileInput = newUploadGroup.querySelector('input[type="file"]');
                fileInput.value = '';

                // Insere o novo campo na lista
                uploadList.appendChild(newUploadGroup);

                // Atualiza os botões de controle de todos os campos
                updateControls();
            }

            // Inicialização
            updateControls();
        });
    </script>

    <!-- Script para formatação de datas -->
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Formata as datas para o padrão local
            const dataInicio = document.getElementById('DataInicio');
            const dataFim = document.getElementById('DataFim');

            if (dataInicio && !dataInicio.value) {
                const now = new Date();
                now.setMinutes(now.getMinutes() - now.getTimezoneOffset());
                dataInicio.value = now.toISOString().slice(0, 16);
            }

            if (dataFim && !dataFim.value) {
                const future = new Date();
                future.setHours(future.getHours() + 2);
                future.setMinutes(future.getMinutes() - future.getTimezoneOffset());
                dataFim.value = future.toISOString().slice(0, 16);
            }
        });
    </script>
}