<style>
    /* ESTILOS DO MODAL DE NOTIFICAÇÕES - AGORA NO HEADER TAMBÉM OU NO LAYOUT */
    .notification-icon {
        position: relative;
        cursor: pointer;
        font-size: 22px;
        display: inline-block;
    }

        .notification-icon .badge {
            position: absolute;
            top: -8px;
            right: -10px;
            background: #dc3545;
            color: #fff;
            font-size: 12px;
            padding: 2px 6px;
            border-radius: 50%;
        }

    /* Overlay */
    .modal-overlay {
        position: fixed;
        inset: 0;
        background: rgba(0,0,0,0.3);
        display: none;
        justify-content: center;
        align-items: start;
        padding-top: 80px;
        z-index: 9999;
    }

    /* Caixa do modal */
    .modal-box {
        background: white;
        width: 380px;
        border-radius: 8px;
        overflow: hidden;
        box-shadow: 0px 4px 10px rgba(0,0,0,.3);
    }

    /* Header */
    .modal-header {
        background: #0077c8;
        color: white;
        padding: 15px;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

        .modal-header h3 {
            margin: 0;
            font-size: 20px;
        }

    .close-btn {
        background: transparent;
        border: none;
        color: white;
        font-size: 22px;
        cursor: pointer;
    }

    /* Conteúdo */
    .modal-content {
        padding: 15px;
        max-height: 400px;
        overflow-y: auto;
    }

    .notif-item {
        display: flex;
        gap: 10px;
        padding: 12px 0;
        border-bottom: 1px solid #eee;
        cursor: pointer;
    }

        .notif-item:hover {
            background-color: #f8f9fa;
        }

        .notif-item:last-child {
            border-bottom: none;
        }

    .icon {
        font-size: 20px;
        flex-shrink: 0;
    }

    .notif-content {
        flex-grow: 1;
    }

    .notif-title {
        font-weight: bold;
        margin-bottom: 4px;
    }

    .notif-desc {
        font-size: 0.9rem;
        color: #666;
    }

    .notif-time {
        font-size: 0.8rem;
        color: #999;
        margin-top: 4px;
    }

    /* Ver todas */
    .view-all {
        text-align: right;
        margin-top: 10px;
    }

        .view-all a {
            color: #0077c8;
            font-size: 14px;
            text-decoration: none;
        }

            .view-all a:hover {
                text-decoration: underline;
            }
</style>

<!-- Header Fixo -->
<!-- HEADER GLOBAL -->
<header role="heading" aria-level="1">
    <!-- 🔹 Barra de acessibilidade -->
    <div class="barra-acessibilidade bg-primary text-white" role="toolbar" aria-label="Ferramentas de acessibilidade">
        <div class="container-fluid d-flex justify-content-end align-items-center py-1 px-3">
            <button class="btn btn-link btn-aumentar-fonte text-white" id="btnAumentarFonte" aria-label="Aumentar tamanho da fonte">
                <i class="bi bi-zoom-in" aria-hidden="true"></i>
                <span> Aumentar fonte</span>
            </button>
            <button class="btn btn-link btn-diminuir-fonte text-white" id="btnDiminuirFonte" aria-label="Diminuir tamanho da fonte">
                <i class="bi bi-zoom-out" aria-hidden="true"></i>
                <span> Diminuir fonte</span>
            </button>
            <button class="btn btn-link btn-alto-contraste text-white" id="btnAltoContraste" aria-label="Ativar modo de alto contraste">
                <i class="bi bi-circle-half" aria-hidden="true"></i>
                <span> Alto contraste</span>
            </button>
        </div>
    </div>

    <!-- 🔹 Barra institucional -->
    <div class="header-principal bg-white border-bottom" role="banner" aria-label="Cabeçalho institucional">
        <div class="container-fluid d-flex justify-content-between align-items-center py-2 px-2">

            <!-- Logotipo -->
            <a href="/" class="d-flex align-items-center text-decoration-none" aria-label="Página inicial - Prefeitura de Praia Grande">
                <img src="/img/PG-logo-horizontal-cor-inovacao.png"
                     class="me-2 w-100"
                     alt="Logotipo da Prefeitura de Praia Grande">
            </a>

            <!-- Notificações - BOTÃO QUE ABRE O MODAL (AGORA FUNCIONA EM TODAS AS PÁGINAS) -->
            <button id="openNotifications" type="button" class="btn btn-link position-relative" aria-label="Ver notificações (3 novas)">
                <i class="bi bi-bell-fill fs-5 text-primary"></i>
                <span class="visually-hidden">Abrir notificações</span>
                <!-- Badge de notificação -->
                <span class="position-absolute top-0 start-100 translate-middle p-1 bg-danger border border-light rounded-circle">
                    <span class="visually-hidden">3 notificações não lidas</span>
                </span>
            </button>
        </div>
    </div>
</header>