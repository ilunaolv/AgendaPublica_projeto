<!-- Lógica do Sidebar (Inclua no seu <script> ou tag separada) -->
<script>
    // --- LÓGICA DO SIDEBAR (Colapsar/Expandir) ---
    // Nota: Esta função é separada no código completo para ser integrada ao seu módulo principal.
    let isSidebarExpanded = true;

    window.toggleSidebar = function() {
        const sidebar = document.getElementById('sidebar');
        const mainContent = document.getElementById('main-content');
        const menuTexts = document.querySelectorAll('.sidebar-menu-text');
        const title = document.getElementById('sidebar-title');
        const toggleBtnIcon = document.querySelector('#sidebar-toggle-btn i');

        isSidebarExpanded = !isSidebarExpanded;

        if (isSidebarExpanded) {
            // Expandir
            sidebar.classList.replace('sidebar-collapsed', 'sidebar-expanded');
            mainContent.classList.replace('main-content-no-shift', 'main-content-shift');
            title.style.opacity = 1;
            toggleBtnIcon.classList.replace('bi-chevron-right', 'bi-chevron-left');
            menuTexts.forEach(el => {
                el.style.opacity = 1;
                el.style.visibility = 'visible';
            });
        } else {
            // Colapsar
            sidebar.classList.replace('sidebar-expanded', 'sidebar-collapsed');
            mainContent.classList.replace('main-content-shift', 'main-content-no-shift');
            title.style.opacity = 0;
            toggleBtnIcon.classList.replace('bi-chevron-left', 'bi-chevron-right');
            menuTexts.forEach(el => {
                el.style.opacity = 0;
                el.style.visibility = 'hidden';
            });
        }
    }
    // --- FIM LÓGICA DO SIDEBAR ---
</script>